<RelativeLayout style="@style/MainFragmentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/pagerViewSelection1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>
    
    <LinearLayout style="@style/BigImageButtonRightLayout">

	    <ImageButton style="@style/BigImageButton"
	        android:id="@+id/imageButtonSelection1"
	        android:contentDescription="@string/desc_selection_select"
	        android:background="@drawable/icon_ready" />
	
		<ImageButton style="@style/BigImageButton"
		    android:id="@+id/imageButtonSelection2"
		    android:contentDescription="@string/desc_selection_delete"
		    android:background="@drawable/icon_reset" />
	
	</LinearLayout>
    
</RelativeLayout>