<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBarRecordAlert1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="center_horizontal">
		
     	<ImageButton style="@style/Button_Fragment_Style"
            android:id="@+id/imageButtonRecordAlert1"
            android:contentDescription="@string/desc_recordalert_record"
            android:background="@drawable/icon_media_record" />
        
    </LinearLayout>

</LinearLayout>
