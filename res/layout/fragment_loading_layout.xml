<RelativeLayout style="@style/MainFragmentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.view.display.DisplayGLSurfaceView style="@style/GLSurfaceViewWithButtons"
        android:id="@+id/DisplayGLSurfaceViewLoading1" />

    <LinearLayout style="@style/BigImageButtonCenterLayout">

        <ImageButton style="@style/BigImageButton"
            android:id="@+id/imageButtonLoading1"
            android:contentDescription="@string/desc_new_character"
            android:src="@drawable/newcharacter_icon" />

        <ImageButton style="@style/BigImageButton"
            android:id="@+id/imageButtonLoading2"
            android:contentDescription="@string/desc_play_game"
            android:src="@drawable/playgame_icon" />

        <ImageButton style="@style/BigImageButton"
            android:id="@+id/imageButtonLoading3"
            android:contentDescription="@string/desc_view_characters"
            android:src="@drawable/viewcharacter_icon" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/textViewLoading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="80sp" />

</RelativeLayout>