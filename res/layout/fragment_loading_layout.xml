<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">
    
    <com.view.display.DisplayGLSurfaceView
        android:id="@+id/DisplayGLSurfaceViewLoading1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageButton
            android:id="@+id/imageButtonLoading1"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
            android:contentDescription="@string/desc_new_character"
            android:src="@drawable/newcharacter_icon" />

        <ImageButton
            android:id="@+id/imageButtonLoading2"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
            android:contentDescription="@string/desc_play_game"
            android:src="@drawable/playgame_icon" />

        <ImageButton
            android:id="@+id/imageButtonLoading3"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
            android:contentDescription="@string/desc_view_characters"
            android:src="@drawable/viewcharacter_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewLoading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="80sp" />

</RelativeLayout>