		        android:id="@+id/linearLayoutSticker2">
				
				<TextView style="@style/Text_Section_Dialog_Style"
  	        		android:text="@string/title_dialog_mouths"/>
											
			</LinearLayout>
			
		</ScrollView>
 		
		<ScrollView
			android:layout_width="wrap_content"
			android:layout_height="300dp" >
			 	    
