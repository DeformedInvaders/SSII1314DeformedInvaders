			</LinearLayout>

		</ScrollView>
  	    
		<ScrollView
			android:layout_width="wrap_content"
			android:layout_height="300dp" >
			
		    <LinearLayout style="@style/Layout_Vertical_Section_Dialog_Style"
		        android:id="@+id/linearLayoutSticker5">
				
           		<TextView style="@style/Text_Section_Dialog_Style"
 	        		android:text="@string/title_dialog_helmets"/>			
									
			</LinearLayout>
			
		</ScrollView>
			
