			</LinearLayout>
			
		</ScrollView>
			
		<ScrollView
			android:layout_width="wrap_content"
			android:layout_height="300dp" >
			  	        	
		    <LinearLayout style="@style/Layout_Vertical_Section_Dialog_Style"
		        android:id="@+id/linearLayoutSticker4">
				
