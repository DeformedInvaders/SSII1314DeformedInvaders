<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/Layout_Fragment_Style"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.game.game.GameOpenGLSurfaceView style="@style/GLSurfaceView_Style"
        android:id="@+id/gameGLSurfaceViewGame1" />
    
	<LinearLayout style="@style/Layout_Left_FragmentButton_Style" >

        <ImageButton
            android:id="@+id/imageButtonGame1"
            style="@style/Button_Fragment_Style"
            android:background="@drawable/icon_main_game"
            android:contentDescription="@string/desc_game_play" />

	</LinearLayout>
	 
	<LinearLayout style="@style/Layout_Right_FragmentButton_Style" >
		
        <ImageButton
            android:id="@+id/imageButtonGame2"
            style="@style/Button_Fragment_Style"
            android:background="@drawable/icon_game_jump"
            android:contentDescription="@string/desc_select_jump" />
        
        <ImageButton
            android:id="@+id/imageButtonGame3"
            style="@style/Button_Fragment_Style"
            android:background="@drawable/icon_game_crouch"
            android:contentDescription="@string/desc_select_crouch" />
        
        <ImageButton
            android:id="@+id/imageButtonGame4"
            style="@style/Button_Fragment_Style"
            android:background="@drawable/icon_game_attack"
            android:contentDescription="@string/desc_select_attack" />

	</LinearLayout>
    
</RelativeLayout>
