<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/Layout_Fragment_Style"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.project.main">
    
    <ImageView style="@style/ImageView_Background_Style"
        android:id="@+id/imageViewGame1"
        android:contentDescription="@string/desc_select_background" />
    
    <com.game.game.GameOpenGLSurfaceView style="@style/GLSurfaceView_Style"
        android:id="@+id/gameGLSurfaceViewGame1" />
    
	<LinearLayout style="@style/Layout_Top_Left_FragmentButton_Style" 
	    android:id="@+id/linearLayoutGame1"
	    android:orientation="horizontal">

        <com.android.view.IconImageButton
            android:id="@+id/imageButtonGame1"
            style="@style/Button_Fragment_Style"
            android:contentDescription="@string/desc_game_play"
            android:background="@drawable/icon_game_play"
            custom:background_pressed="@drawable/icon_game_pause"/>
	
	</LinearLayout>
	
    <TextView
        android:id="@+id/textViewGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#EEEEEE"
        android:textSize="30sp" />
    
    <LinearLayout style="@style/Layout_Top_Right_FragmentButton_Style"
	    android:id="@+id/linearLayoutGame2"
        android:orientation="horizontal"/>
    
</RelativeLayout>
