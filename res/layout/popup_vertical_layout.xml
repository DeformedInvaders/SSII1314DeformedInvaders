<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    	<LinearLayout
	    	android:id="@+id/tracks"
	    	android:orientation="vertical"
	        android:layout_width="wrap_content"
	   		android:background="@drawable/popup"
	   		android:fadingEdgeLength="5dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	       >

    	     <ImageButton
    		    android:id="@+id/ibIncremento"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:background="@null"
    		    android:src="@drawable/incremento_btn" />
    	        		
    		<ImageView
    		    android:id="@+id/ibContenido"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:background="@null"
    		    android:src="@drawable/central_fino" />
    		
    		 <ImageButton
    		    android:id="@+id/ibDecremento"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:background="@null"
    		    android:src="@drawable/decremento_btn" />

    	</LinearLayout>

        
 	<ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_below="@id/tracks"
      	android:layout_marginTop="-2dip"
        android:src="@drawable/arrow_down" />

</RelativeLayout>