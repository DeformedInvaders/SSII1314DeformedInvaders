<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

<!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
<!-- MainLayout -->
    
    <style name="Layout_Fragment_Style">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
	</style>
	
	<style name="Layout_Activity_Style" parent="Layout_Fragment_Style">
	    <item name="android:background">#FFFFFF</item>
    </style>
	
	<style name="Layout_Dialog_Style" >	    
		<item name="android:orientation">vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:paddingLeft">10dp</item>
    </style>
    
<!-- Botones -->
    
    <style name="Button_Fragment_Style">
        <item name="android:layout_width">@dimen/FragmentButton_LayoutWidth_Dimen</item>
        <item name="android:layout_height">@dimen/FragmentButton_LayoutHeight_Dimen</item>
        <item name="android:layout_marginLeft">10dp</item>
	</style>
	
    <style name="Button_Sticker_Style">
    	<item name="android:layout_width">@dimen/StickerButton_LayoutWidth_Dimen</item>
        <item name="android:layout_height">@dimen/StickerButton_LayoutHeight_Dimen</item>
    </style>
    
    <style name="Button_Size_Style">
		<item name="android:layout_width">@dimen/SizeButton_LayoutWidth_Dimen</item>
		<item name="android:layout_height">@dimen/SizeButton_LayoutHeight_Dimen</item>
		<item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="Button_Color_Style">
		<item name="android:layout_width">@dimen/ColorButton_LayoutWidth_Dimen</item>
		<item name="android:layout_height">@dimen/ColorButton_LayoutHeight_Dimen</item>
		<item name="android:layout_marginLeft">10dp</item>
    </style>   
	
<!-- FrameLayout -->
    
    <style name="FrameLayout_Style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	
	<style name="ViewPager_Style">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
    </style>
	
<!-- Canvas -->
	
	<style name="GLSurfaceView_Style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
<!-- ImageView Background -->
	
	<style name="ImageView_Background_Style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
	<style name="ImageView_Achievement_Style">
		<item name="android:layout_width">@dimen/ImageView_AchievementWidth_Dimen</item>
		<item name="android:layout_height">@dimen/ImageView_AchievementHeight_Dimen</item>
    </style>
	
<!-- Layout Fragmentos -->
    
    <style name="Layout_FragmentButton_Style">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Layout_Bottom_FragmentButton_Style" parent="Layout_FragmentButton_Style">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Layout_Bottom_Right_FragmentButton_Style" parent="Layout_Bottom_FragmentButton_Style">
		<item name="android:layout_alignParentRight">true</item>
	</style>
	
	<style name="Layout_Bottom_Left_FragmentButton_Style" parent="Layout_Bottom_FragmentButton_Style">
		<item name="android:layout_alignParentLeft">true</item>
	</style>

	<style name="Layout_Bottom_Center_FragmentButton_Style" parent="Layout_Bottom_FragmentButton_Style">
		<item name="android:layout_centerHorizontal">true</item>
	</style>
	
	<style name="Layout_Top_FragmentButton_Style" parent="Layout_FragmentButton_Style">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Layout_Top_Right_FragmentButton_Style" parent="Layout_Top_FragmentButton_Style">
		<item name="android:layout_alignParentRight">true</item>
	</style>
	
	<style name="Layout_Top_Left_FragmentButton_Style" parent="Layout_Top_FragmentButton_Style">
		<item name="android:layout_alignParentLeft">true</item>
	</style>

	<style name="Layout_Top_Center_FragmentButton_Style" parent="Layout_Top_FragmentButton_Style">
		<item name="android:layout_centerHorizontal">true</item>
	</style>
	
<!-- Imagenes -->
	
	<style name="ImageView_Cursor_Style">
		<item name="android:layout_width">15dp</item>
		<item name="android:layout_height">15dp</item>
		<item name="android:scaleType">matrix</item>
	</style>
	
	<style name="ImagenView_Size_Style">
		<item name="android:layout_width">@dimen/ImageView_LayoutWidth_Dimen</item>
		<item name="android:layout_height">@dimen/ImageView_LayoutHeight_Dimen</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">5dp</item>
    </style>
	
<!-- Layout Dialogos -->
	
	<style name="Layout_Horizontal_Content_Dialog_Style">
	    <item name="android:orientation">horizontal</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
		<item name="android:background">#7F7F7F</item>
	</style>
	
	<style name="Layout_Vertical_Content_Dialog_Style" parent="Layout_Horizontal_Content_Dialog_Style">
		<item name="android:orientation">vertical</item>
	</style>
	
	<style name="Layout_Horizontal_Content_Dialog_Comic_Style" parent="Layout_Horizontal_Content_Dialog_Style">
		<item name="android:background">#FFFFFF</item>
	</style>
	
	<style name="Layout_Vertical_Content_Dialog_Comic_Style" parent="Layout_Horizontal_Content_Dialog_Comic_Style">
		<item name="android:orientation">vertical</item>
	</style>
	
	<style name="Text_Section_Dialog_Style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textSize">20sp</item>   
	</style>
	
		<style name="Text_Section_Dialog_Comic_Style" parent="Text_Section_Dialog_Style">
		<item name="android:textColor">#000000</item>
	</style>
	
	<style name="Layout_Horizontal_Section_Dialog_Style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>	
		<item name="android:paddingBottom">10dp</item>
		<item name="android:maxWidth">200dp</item>	    
	</style>
	
	<style name="Layout_Vertical_Section_Dialog_Style" parent="Layout_Horizontal_Section_Dialog_Style">
	    <item name="android:orientation">vertical</item>
	</style>
	
	<style name="ImageView_Arrow_Dialog_Style">
	    <item name="android:layout_width">40dp</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:src">@drawable/image_dialog_arrow_1</item>	
	</style>
	
	<style name="ImageView_Arrow_Dialog_Comic_Style" parent="ImageView_Arrow_Dialog_Style">
		<item name="android:src">@drawable/image_dialog_arrow_2</item>	
	</style>
	
</resources>
