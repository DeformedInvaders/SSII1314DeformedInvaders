<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- MainLayout -->
    
    <style name="Layout_Fragment_Style">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
	</style>
	
	<style name="Layout_Activity_Style" parent="Layout_Fragment_Style">
        <item name="android:orientation">horizontal</item>
	</style>
    
    <!-- Botones -->
    
    <style name="ImageButton_Big_Style">
        <item name="android:layout_width">@dimen/BigImageButton_LayoutWidth_Dimen</item>
        <item name="android:layout_height">@dimen/BigImageButton_LayoutHeight_Dimen</item>
        <item name="android:layout_marginLeft">10dp</item>
	</style>
	
    <!-- Canvas -->
	
	<style name="GLSurfaceView_Style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
    <style name="GLSurfaceView_BigImageButton_Style" parent="GLSurfaceView_Style">
		<item name="android:layout_marginBottom">@dimen/BigImageButton_LayoutHeight_Dimen</item>
	</style>
	
    <style name="ViewPager_Style">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
    </style>
	
    <!-- Layout Botones -->
    
    <style name="Layout_BigImageButton_Style">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Layout_Right_BigImageButton_Style" parent="Layout_BigImageButton_Style">
		<item name="android:layout_alignParentRight">true</item>
	</style>
	
	<style name="Layout_Left_BigImageButton_Style" parent="Layout_BigImageButton_Style">
		<item name="android:layout_alignParentLeft">true</item>
	</style>

	<style name="Layout_Center_BigImageButton_Style" parent="Layout_BigImageButton_Style">
		<item name="android:layout_centerHorizontal">true</item>
	</style>
	
</resources>
