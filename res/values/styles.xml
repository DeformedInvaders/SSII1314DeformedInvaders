<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- MainLayout -->
    
    <style name="MainActivityLayout">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:orientation">horizontal</item>
	</style>
	
    <style name="MainFragmentLayout">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
	</style>
    
    <!-- Botones -->
    
    <style name="BigImageButton">
        <item name="android:layout_width">@dimen/BigImageButton_layoutWidth</item>
        <item name="android:layout_height">@dimen/BigImageButton_layoutHeight</item>
        <item name="android:layout_marginLeft">10dp</item>
	</style>
	
    <!-- Canvas -->
	
	<style name="GLSurfaceViewWithoutButtons">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
    <style name="GLSurfaceViewWithButtons">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_marginBottom">@dimen/BigImageButton_layoutHeight</item>
	</style>
	
    <!-- Layout Botones -->

    <style name="BigImageButtonRightLayout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>
	
	<style name="BigImageButtonLeftLayout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentLeft">true</item>
	</style>

	<style name="BigImageButtonCenterLayout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_centerHorizontal">true</item>
	</style>
	
</resources>
